{
    "name": "saascript",
    "version": "0.0.5",
    "description": "Node boilerplate for SaaS applications using TypeScript and Docker",
    "main": "./dist/server.js",
    "scripts": {
        "start": "node ./dist/server",
        "serve": "npm run build && npm start",
        "serve-docker": "npm run build-docker && docker-compose up",
        "serve-ts": "npm run tslint && ts-node src/server",
        "build": "npm run build-ts && npm run tslint",
        "build-docker": "docker build -t saascript .",
        "build-ts": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "debug": "nodemon --watch ./dist --inspect=0.0.0.0:9229 --nolazy ./dist/server",
        "debug-docker": "npm run build-docker && docker-compose -f docker-compose.yml -f docker-compose.debug.yml up",
        "tslint": "tslint -c tslint.json -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/venkateshcv1809/saascript.git"
    },
    "keywords": [
        "SaaS",
        "Node",
        "TypeScript",
        "Docker",
        "VSCode"
    ],
    "author": "VENKATESH C.V <venkateshvairam@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/venkateshcv1809/saascript/issues"
    },
    "homepage": "https://github.com/venkateshcv1809/saascript#readme",
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "lodash": "^4.17.15"
    },
    "devDependencies": {
        "@types/compression": "0.0.36",
        "@types/express": "^4.17.2",
        "nodemon": "^1.19.4",
        "ts-node": "^8.5.4",
        "tslint": "^5.20.1",
        "typescript": "^3.7.2"
    }
}
