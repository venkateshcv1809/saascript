{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Node: Launch Program",
            "preLaunchTask": "TypeScript Build",
            "program": "${workspaceFolder}/dist/server",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TypeScript: Launch Program",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/src/server.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Docker: Launch Program",
            "preLaunchTask": "TypeScript Watch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug-docker"
            ],
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "timeout": 60000,
            "localRoot": "${workspaceFolder}/dist",
            "remoteRoot": "/usr/src/saascript/dist",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "preLaunchTask": "TypeScript Watch",
            "protocol": "auto",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}/dist",
            "remoteRoot": "/usr/src/saascript/dist",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js",
            ],
        },
    ],
}
