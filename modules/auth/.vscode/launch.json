{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program (dist/app.js)",
      "program": "${workspaceFolder}/modules/auth/dist/app.js",
      "cwd": "${workspaceFolder}/modules/auth",
      "envFile": "${workspaceFolder}/modules/auth/.env"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker/Podman",
      "port": 9229,
      "address": "localhost",
      "restart": false,
      "localRoot": "${workspaceFolder}/modules/auth",
      "remoteRoot": "/usr/src/app",
      "protocol": "inspector"
    }
  ]
}
